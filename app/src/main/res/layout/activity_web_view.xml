<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#000" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/appCallHtml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App调用Html方法" />

        <Button
            android:id="@+id/appCallHtmlParam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App调用Html方法传值" />

        <Button
            android:id="@+id/noParamAppCallHtmlReturnApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Param:Html----App" />

        <Button
            android:id="@+id/paramAppToHtmlReturnApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Param:App----Html----App" />
    </LinearLayout>
</ScrollView>
</LinearLayout>
